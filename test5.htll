int var1 := 4
int i := 0

Loop, 1
    Loop2, 10
        ; --- Test Case 1: Equality ---
        ; This should only print when i is exactly 4.
        if1 (i = var1)
            print("--- i is EXACTLY 4 (testing '=') ---")
        ifend1

        ; --- Test Case 2: Less Than (with a nested '<=') ---
        ; This block should run for i = 0, 1, 2, 3.
        if1 (i < var1)
            print("i is less than 4 (testing '<')")
            
            ; This NESTED block should only run for i = 0, 1.
            if2 (i <= 1)
                print("    ...and i is 1 or less (testing '<=')")
            ifend2
        ifend1

        ; --- Test Case 3: Greater Than (with a nested '>=') ---
        ; This block should run for i = 5, 6, 7, 8, 9.
        if1 (i > var1)
            print("i is greater than 4 (testing '>')")

            ; This NESTED block should only run for i = 7, 8, 9.
            if2 (i >= 7)
                print("    ...and i is 7 or more (testing '>=')")
            ifend2
        ifend1
        
        i++
    loopend2
loopend1

print("All tests finished.")
